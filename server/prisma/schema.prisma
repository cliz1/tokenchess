datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  username   String   @unique
  password   String
  decks      Deck[]   @relation("owner_decks")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Deck {
  id         String   @id @default(uuid())
  user       User     @relation("owner_decks", fields: [userId], references: [id])
  userId     String
  name       String
  data       Json     // store board layout, FEN, or arbitrary JSON
  isPublic   Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
}
